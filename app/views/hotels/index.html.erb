<h1>Listing hotels</h1>

<table>
  <thead>
    <tr>
      <th>Tag</th>
      <th>Name</th>
      <th>Stars</th>
      <th>Rating</th>
      <th>Review count</th>
      <th>Comment count</th>
      <th>Location</th>
      <th>Format Address</th>
      <th>Street Address</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @hotels.each do |hotel| %>
      <tr>
        <td><%= hotel.tag %></td>
        <td><%= hotel.name %></td>
        <td><%= hotel.star_rating %></td>
        <td><%= hotel.rating %></td>
        <td><%= hotel.review_count %></td>
        <td><%= hotel.reviews.size %></td>
        <td><%= hotel.location %></td>
        <td><%= hotel.format_address %></td>
        <td><%= hotel.street_address %></td>
        <td><%= link_to 'Show', hotel %></td>
        <td><%= link_to 'Reviews', reviews_path(hotel_id: hotel.id) %></td>
        <td><%= link_to 'Edit', edit_hotel_path(hotel) %></td>
        <td><%= link_to 'Destroy', hotel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="digg_pagination">
  <%= will_paginate @hotels, :previous_label => '上一页', :next_label => '下一页'%>
</div>

<br>

<%= link_to 'New Hotel', new_hotel_path %>
