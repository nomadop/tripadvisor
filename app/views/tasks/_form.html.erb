<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :job_type %><br>
    <%= f.select :job_type, Task.job_types.map{ |job_type| [job_type, job_type] } %>
  </div>
  <div class="field">
    <%= f.label :every %><br>
    <%= f.text_field :every %>
  </div>
  <div class="field">
    <%= f.label :at %><br>
    <%= f.text_field :at %>
  </div>
  <div class="field">
    <%= f.label :options %><br>
    <%= f.text_area :options, value: @task.options.to_json %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
